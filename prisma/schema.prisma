// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url= env("DATABASE_URL")
}

model Usuario {
  id              Int        @id @default(autoincrement())
  nome            String
  apelido         String
  gmail           String     @unique
  senha           String
  rua             String
  telefone        String
  foto_de_perfil  String?
  cidade          String
  estado          String
  bairro          String
  data_nascimento DateTime
  Resposta        Resposta[]
  Chat            Chat[]
}

model Questionario {
  id        Int        @id @default(autoincrement())
  titulo    String
  enunciado String
  Resposta  Resposta[]
}

model Resposta {
  id             Int          @id @default(autoincrement())
  resposta       String
  usuarioId      Int
  usuario        Usuario      @relation(fields: [usuarioId], references: [id])
  questionarioId Int
  questionario   Questionario @relation(fields: [questionarioId], references: [id])
}

model Chat {
  id              Int           @id @default(autoincrement())
  mensagem        String
  data            DateTime
  usuarioId       Int
  usuario         Usuario       @relation(fields: [usuarioId], references: [id])
  profissionaisId Int
  profissionais   Profissionais @relation(fields: [profissionaisId], references: [id])
  mensagens       Mensagem[]    // 
}


model Mensagem {
  id        Int      @id @default(autoincrement())
  data      String
  mensagem  String
  chatId    Int
  horario   String
  chat      Chat?    @relation(fields: [chatId], references: [id])
}



model Profissionais {
  id      Int    @id @default(autoincrement())
  nome    String
  contato String
  Chat    Chat[]
}
